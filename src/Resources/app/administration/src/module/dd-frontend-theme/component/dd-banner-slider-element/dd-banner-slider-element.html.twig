{% block dd_banner_slider_element %}
    <div class="dd-banner-slider">
        <div class="slider-container">
            <div v-for="(slide, index) in slides" :key="index" class="slide" :class="{ active: index === 0 }">
                <img v-if="slide.image" :src="slide.image" :alt="slide.title" class="slide-image">
                <div v-else class="slide-image-placeholder">
                    <sw-icon name="regular-image" size="48"></sw-icon>
                    <span>No image selected</span>
                </div>
                
                <div class="slide-content">
                    <h2 v-if="slide.title" class="slide-title">{{ slide.title }}</h2>
                    <p v-if="slide.description" class="slide-description">{{ slide.description }}</p>
                </div>
            </div>
        </div>
        
        <div v-if="slides.length > 1" class="slider-nav">
            <div v-for="(slide, index) in slides" :key="index" class="nav-dot" :class="{ active: index === 0 }"></div>
        </div>
        
        <div v-if="slides.length > 1" class="slider-controls">
            <button class="prev-btn">&lt;</button>
            <button class="next-btn">&gt;</button>
        </div>
    </div>
{% endblock %}
